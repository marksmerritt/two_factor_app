<div style="max-width: 400px; margin: 50px auto; padding: 20px;">
  <h1>Verify Two-Factor Authentication</h1>
  
  <p>Please enter the 6-digit code from your authenticator app:</p>
  
  <%= form_with url: two_factor_verification_verify_path, method: :post, local: true do |form| %>
    <div style="margin: 30px 0;">
      <%= form.label :code, "Verification Code:", style: "display: block; margin-bottom: 10px;" %>
      <%= form.text_field :code, 
          placeholder: "000000", 
          maxlength: 6, 
          pattern: "[0-9]{6}",
          style: "width: 100%; padding: 15px; font-size: 24px; text-align: center; letter-spacing: 8px; border: 2px solid #ddd; border-radius: 4px;",
          autocomplete: "off",
          autofocus: true %>
    </div>
    
    <%= form.submit "Verify", style: "width: 100%; padding: 15px; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
  <% end %>
  
  <div style="margin-top: 20px; text-align: center;">
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, style: "color: #666; text-decoration: none;" %>
  </div>
</div>

